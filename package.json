{
  "name": "@retreon/example-todomvc",
  "version": "0.1.0",
  "private": true,
  "repository": "https://github.com/retreon/todomvc",
  "dependencies": {
    "freeform-input": "^0.2.0",
    "invariant": "^2.2.4",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-icons": "^4.2.0",
    "react-redux": "^7.2.2",
    "react-scripts": "5.0.1",
    "redux": "^4.0.5",
    "retreon": "^0.6.1",
    "styled-components": "^5.2.1",
    "uuid": "^8.3.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build --color",
    "eject": "react-scripts eject",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "test": "./run-tests",
    "test:unit": "react-scripts test --colors",
    "test:e2e": "BROWSER=none start-test 3000 cy:run",
    "test:lint": "eslint src cypress --color"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "prettier"
    ],
    "rules": {
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/no-use-before-define": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/no-empty-function": "off",
      "@typescript-eslint/no-unused-vars": "error",
      "testing-library/await-async-query": "off",
      "testing-library/prefer-screen-queries": "off"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "homepage": "/todomvc",
  "devDependencies": {
    "@types/enzyme": "^3.10.8",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/invariant": "^2.2.34",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.31",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@types/react-redux": "^7.1.16",
    "@types/styled-components": "^5.1.7",
    "@types/uuid": "^8.3.0",
    "cypress": "^6.5.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "prettier": "^2.2.1",
    "start-server-and-test": "^1.12.0",
    "typescript": "4.1.5"
  }
}
